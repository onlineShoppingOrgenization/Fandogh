<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentDeliveryType"
    android:background="#fff"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نحوه تحویل"
            android:textColor="#6f0b0d"
            android:textSize="24dip"
            android:layout_gravity="center|right"
            android:gravity="right"
            android:textStyle="bold"
            android:id="@+id/txt_delivery"
            android:paddingRight="@dimen/title_padding" />
    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".activities.ActivityMain"
        android:layout_weight="0.8"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/border">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout5">

            <TextView
                android:layout_width="128dip"
                android:layout_height="128dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="ساعت دلخواه"
                android:id="@+id/wish_hours"
                android:background="@color/colorPrimary"
                android:layout_margin="16dip"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="17sp" />

            <TextView
                android:layout_width="128dip"
                android:layout_height="128dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="یک ساعته"
                android:id="@+id/one_hour"
                android:background="@color/colorPrimary"
                android:layout_margin="16dip"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="17sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/txt_adjusted_hour"
            android:layout_marginBottom="165dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ارسال سفارش"
            android:id="@+id/btn_send_order"
            android:background="#6f0b0d"
            android:textColor="#fff"
            android:textSize="24dip" />
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->



</LinearLayout>

